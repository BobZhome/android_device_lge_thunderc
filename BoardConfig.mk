ifeq ($(SUB_MODEL),LW690)
    BOARD_BOOTIMAGE_PARTITION_SIZE := 0x00500000
    BOARD_RECOVERYIMAGE_PARTITION_SIZE := 0x00500000
    BOARD_SYSTEMIMAGE_PARTITION_SIZE := 0x0bd00000
    BOARD_USERDATAIMAGE_PARTITION_SIZE := 0x0c900000
endif

# Optimus Vortex
ifeq ($(SUB_MODEL),VS660)
    BOARD_BOOTIMAGE_PARTITION_SIZE := 0x00500000
    BOARD_RECOVERYIMAGE_PARTITION_SIZE := 0x00500000
    BOARD_SYSTEMIMAGE_PARTITION_SIZE := 0x0bb00000
    BOARD_USERDATAIMAGE_PARTITION_SIZE := 0x0b8e0000
endif

#BOARD_HAS_NO_SELECT_BUTTON := true

TARGET_USES_OVERLAY := true

WITH_DEXPREOPT := false

# Browser
#WITH_JIT := true
#ENABLE_JSC_JIT := true
