ifeq ($(SUB_MODEL),LS670)
    BOARD_BOOTIMAGE_PARTITION_SIZE := 0x00700000
    BOARD_RECOVERYIMAGE_PARTITION_SIZE := 0x00700000
    BOARD_SYSTEMIMAGE_PARTITION_SIZE := 0x09e80000
    BOARD_USERDATAIMAGE_PARTITION_SIZE := 0x0a4e0000
